<PropertyList>

 <fx>

  <crank>
   <name>crank 1</name>
   <path>Sounds/coughing.wav</path>
   <mode>looped</mode>
   <condition>
    <property>/engines/engine/cranking</property>
    <not>
     <property>/engines/engine/running</property>
    </not>
   </condition>
   <position>
    <!-- x/y/z == back/left/up -->
    <x> 26.4 </x>
    <y>  6.6 </y>
    <z> -3.4 </z>
   </position>
   <volume>
    <offset>0.4</offset>
   </volume>
  </crank>
  <crank>
   <name>crank 2</name>
   <path>Sounds/coughing.wav</path>
   <mode>looped</mode>
   <condition>
    <property>/engines/engine[1]/cranking</property>
    <not>
     <property>/engines/engine[1]/running</property>
    </not>
   </condition>
   <position>
    <!-- x/y/z == back/left/up -->
    <x> 26.4 </x>
    <y> -6.6 </y>
    <z> -3.4 </z>
   </position>
   <volume>
    <offset>0.4</offset>
   </volume>
  </crank>
  <crank>
   <name>crank 3</name>
   <path>Sounds/coughing.wav</path>
   <mode>looped</mode>
   <condition>
    <property>/engines/engine[2]/cranking</property>
    <not>
     <property>/engines/engine[2]/running</property>
    </not>
   </condition>
   <position>
    <!-- x/y/z == back/left/up -->
    <x>  73.0 </x>
    <y>  0.0 </y>
    <z>  0.0 </z>
   </position>
   <volume>
    <offset>0.4</offset>
   </volume>
  </crank>

  <engine>
   <name>engine 1</name>
   <path>Sounds/wasp.wav</path>
   <mode>looped</mode>
   <condition>
     <greater-than>
       <property>/engines/engine/rpm</property>
       <value>100</value>
     </greater-than>
   </condition>
   <position>
    <!-- x/y/z == back/left/up -->
    <x> 26.4 </x>
    <y>  6.6 </y>
    <z> -3.4 </z>
   </position>
   <volume>
    <offset>0.5</offset>
   </volume>
   <pitch>
    <property>/engines/engine/rpm</property>
    <factor>0.0008</factor>
    <min>.3</min>
    <max>5.0</max>
    <offset>0.3</offset>
   </pitch>
  </engine>

  <engine>
   <name>engine 2</name>
   <path>Sounds/wasp.wav</path>
   <mode>looped</mode>
   <condition>
     <greater-than>
       <property>/engines/engine/rpm</property>
       <value>100</value>
     </greater-than>
   </condition>
   <position>
    <!-- x/y/z == back/left/up -->
    <x> 26.4 </x>
    <y> -6.6 </y>
    <z> -3.4 </z>
   </position>
   <volume>
    <offset>0.5</offset>
   </volume>
   <pitch>
    <property>/engines/engine[1]/rpm</property>
    <factor>0.0008</factor>
    <min>.3</min>
    <max>5.0</max>
    <offset>0.3</offset>
   </pitch>
  </engine>

  <engine>
   <name>engine 3</name>
   <path>Sounds/wasp.wav</path>
   <mode>looped</mode>
   <condition>
     <greater-than>
       <property>/engines/engine/rpm</property>
       <value>100</value>
     </greater-than>
   </condition>
   <position>
    <!-- x/y/z == back/left/up -->
    <x>  73.0 </x>
    <y>  0.0 </y>
    <z>  0.0 </z>
   </position>
   <volume>
    <offset>0.5</offset>
   </volume>
   <pitch>
    <property>/engines/engine[2]/rpm</property>
    <factor>0.0008</factor>
    <min>.3</min>
    <max>5.0</max>
    <offset>0.3</offset>
   </pitch>
  </engine>

  <envelope_pressure>
   <name>Envelope pressure warning</name>
   <mode>looped</mode>
   <path>Sounds/stall.wav</path>
   <condition>
    <and>
     <less-than>
      <property>fdm/jsbsim/instrumentation/gas-pressure-psf</property>
      <value>6.5</value>
     </less-than>
     <greater-than-equals>
      <property>fdm/jsbsim/instrumentation/gas-pressure-psf</property>
      <value>0.0</value>
     </greater-than-equals>
    </and>
   </condition>
   <position>
    <!-- x/y/z == back/left/up -->
    <x>  18.2 </x>
    <y>   0.0 </y>
    <z>  -8.8 </z>
   </position>
   <volume>
    <offset>0.5</offset>
   </volume>
  </envelope_pressure>

 </fx>

</PropertyList>
